{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "rootDir": "src",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "outDir": ".dist",
    "resolveJsonModule":true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude":[
    "../node_modules"
  ]
}
